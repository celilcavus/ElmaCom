@model IEnumerable<SubCategory>

<table class="table table-hover">
    <thead>
        <tr>
            <td>ID</td>
            <td>Alt Kategori AdI</td>
            <td>Kategori Adi</td>
            <td>Aciklama</td>
            <td>Aktif Mi?</td>
            <td>Oluşturma tarihi</td>
            <td>Son güncelleme Tarihi</td>
            <td>Güncelle</td>
            <td>Sil</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            if (item.IsActive)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.SubCategoryName</td>
                    <td>@item.BaseCategoryId</td>
                    <td>@item.Description</td>
                    <td>
                        @if (item.IsActive)
                        {
                        <p>Aktif</p>
                        }
                        else
                        {
                        <p>Aktif Değil</p>
                        }
                    </td>
                    <td>@item.CreateDate</td>
                    <td>@item.LastUpdateDate</td>
                    <td>
                        <a asp-action="Update" asp-controller="SubCategory" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Update</a>
                    </td>
                    <td>
                        <a asp-action="Delete" asp-controller="SubCategory" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>